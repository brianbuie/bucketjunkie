mixin registerForm(req = { body: {} })
  form.medium-6.large-4(action="/account/register" method="POST")
    p.text-center Register
    label(for="username") Username
      input(type="text" name="username" autocomplete="off" value=req.body.username)
    label(for="email") Email Address
      input(type="email" name="email" autocomplete="off" value=req.body.email)
    label(for="password") Password
      input(type="password" name="password" autocomplete="off" value=req.body.password)
    label(for="confirm-password") Again
      input(type="password" name="confirm-password" autocomplete="off" value=req.body['confirm-password'])
    input.button.expanded(type="submit" value="Register â†’")
    p.text-center
      span Already have an account?
      a(href="/account/login")  Login