extends ../layout

include mixins/_leagueForm
include mixins/_addModerator
include mixins/_removeModerator
include mixins/_removeMember

block content
  .grid-x.align-center
    .medium-6.large-4
      p Edit League
      +leagueForm(req.league, exists = true)
      strong Members
        ul
          each member in req.league.members
            li= member.username
              +removeModerator(req, member)
              +addModerator(req, member)
              +removeMember(req, member)

  pre(style="margin-top: 60px; font-size: 12px;")
    != helpers.dump(req.leagueAuth)