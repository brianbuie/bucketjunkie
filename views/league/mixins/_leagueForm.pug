mixin leagueForm(req)
  - req.league = req.league || {}
  form.medium-6.large-4(method="POST")
    label(for="name") League Name
      input(type="text" name="name" value=req.league.name)
    label(for="description") Description
      textarea(name="description")= req.league.description
    label(for="public") Public
      input(type="checkbox" name="public" checked=req.league.public)
    label(for="open") Allow users to join
      input(type="checkbox" name="open" checked=req.league.open)
    input.button.expanded(type="submit" value="Save â†’")