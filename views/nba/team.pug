extends ../layout

block content
  p= `${team.city} ${team.team_name}`
  p Players
    ul
      each player in players
        li
          a(href=`/nba/player/${player._id}`)= player.player_name
  p Upcoming Games
    ul
      each game in games
        if game.away_id._id === team._id
          li= `@ ${game.home_id.full_name}`
        else
          li= `vs ${game.away_id.full_name}`