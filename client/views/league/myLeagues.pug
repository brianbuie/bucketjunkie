extends ../layout

include mixins/leagueListing

block content
  .container
    .row
      .bg-light.col-sm-10.col-md-8.mx-auto.mb-4.pt-3
        h2.text-center.mb-3 My Leagues
        div
          each league in myLeagues
            a.link-discreet.striped(href=`/lg/${league._id}`)
              .row.striped-child.py-3
                .col
                  +leagueListing(league)
    .row
      .col-sm-10.col-md-8.mx-auto.mb-4
        .d-flex.flex-row.justify-content-around
          a.btn.btn-success(href="/leagues/create") Create a League
          a.btn.btn-primary(href="/leagues/public") Join a League